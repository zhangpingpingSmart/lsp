<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zpp.lsp.mapper.CategoryMapper">

    <resultMap id="CategoryMap" type="Category">
        <id property="categoryId" column="category_id"/>
        <result  property="categoryCode" column="category_code"/>
        <result  property="categoryName" column="category_name"/>
        <result  property="parentId" column="parent_id"/>
        <result  property="categoryLevel" column="category_level"/>
        <result  property="categorySeq" column="category_seq"/>
        <result  property="isEnd" column="is_end"/>
        <result  property="categoryStatus" column="category_status"/>
        <result  property="createTime" column="create_time"/>
        <result  property="updateTime" column="update_time"/>
        <result  property="categoryLogo" column="category_logo"/>
    </resultMap>

    <select id="" resultMap="CategoryMap" resultType="com.zpp.lsp.pojo.Category">
        select
            category_id,
            category_code,
            category_name,
            parent_id,
            category_level,
            category_seq,
            is_end,
            category_status,
            create_time,
            update_time,
            category_logo
        from
            category
        where
            category_id=#{categoryId}
        and
        is_delete=0
    </select>
</mapper>